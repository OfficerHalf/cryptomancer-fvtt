{{!
@Input id: string;
@Input value: boolean;
@Input name: string;
@Input placeholder?: string;
@Input index?: string;
@Input color?: string;
@Input round?: boolean;
@Input tooltip?: string;
@Input readonly?: boolean;
}}
<div class="crypt-toggle-box {{#if color }}{{color }}{{/if }} {{#if round }}round{{/if }}" {{#if tooltip }}data-tooltip="{{tooltip }}"{{/if }}>
  <input class="visually-hidden" id="{{id}}" type="checkbox" {{checked value}} name="{{name}}" data-dtype="Boolean" data-index="{{index}}" {{#if readonly }}readonly="true"{{/if }} />
  <label for="{{id}}">{{placeholder}}</label>
</div>
