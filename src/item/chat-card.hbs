{{!
@Input context: {
title: string;
avatar: string;
description: SafeString;
rules?: Record{string, EquipmentRule};
castCost?: string;
type?: string;
}
}}
<section class="crypt-item-card">
  <details open>
    <summary>
      <img src="{{this.avatar}}" alt="{{this.title}}" width="36" height="36"/>
      <h3>{{this.title}}</h3>
    </summary>
    {{#if this.rules }}
      <div class="rules">
        {{#each this.rules }}
          <div class="crypt-chip primary">{{equipmentRuleLabel this}}</div>
        {{/each}}
        <div class="chat-actions">
          {{#each (skillRules this.rules) }}
            <button type="button"
                    data-chat-action="skill-check"
                    data-skill="{{this.skill}}">
              {{l (concat "Skill." this.skill)}}
            </button>
          {{/each}}
        </div>
      </div>
    {{/if}}
    {{#if this.castCost }}
      <div class="spell-info">{{chatCardSpellType this.type}}, {{this.castCost}} {{l "Spell.mp"}}</div>
    {{/if}}
    <div>{{safe this.description}}</div>
  </details>
</section>
