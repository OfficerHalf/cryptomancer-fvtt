<form class="crypt-item-sheet__spell" autocomplete="off">
  <header>
    <div class="item-info-wrapper">
      <div class="avatar">
        <img
          class="profile-img"
          src="{{item.img}}"
          data-edit="img"
          title="{{item.name}}"
        />
      </div>
      <div class="item-info">
        <div class="item-info-inner">
          <div class="name">
            <label class="input-sizer stacked" data-value="{{item.name}}">
              <input
                type="text"
                oninput="this.parentNode.dataset.value = this.value"
                size="1"
                name="name"
                value="{{item.name}}"
              />
              <span class="label">Talent Name</span>
            </label>
          </div>
          <div class="cost">
            <label
              class="input-sizer stacked item-cast-cost"
              data-value="{{data.data.castCost}}"
            >
              <input
                type="text"
                oninput="this.parentNode.dataset.value = this.value"
                size="1"
                name="data.castCost"
                value="{{data.data.castCost}}"
                data-dtype="Number"
              />
              <span class="label">MP Cost</span>
            </label>
            <label
              class="input-sizer stacked item-purchase-cost"
              data-value="{{data.data.purchaseCost}}"
            >
              <input
                type="text"
                oninput="this.parentNode.dataset.value = this.value"
                size="1"
                name="data.purchaseCost"
                value="{{data.data.purchaseCost}}"
                data-dtype="Number"
              />
              <span class="label">UP Cost</span>
            </label>
          </div>
        </div>
        <div class="spell-type">
          <label for="{{concat 'spell-type-select-' item.id}}">
            {{localize "CRYPTOMANCER.SpellType.spellType"}}
          </label>
          <select id="{{concat 'spell-type-select-' item.id}}" name="data.type">
            {{selectOptions spellTypes selected=data.data.type localize=true}}
          </select>
        </div>
      </div>
    </div>
  </header>
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
  </nav>
  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="description">
      {{editor
        content=data.data.description
        target="data.description"
        rollData=rollData
        button=true
        owner=owner
        editable=editable
      }}
    </div>
  </section>
</form>