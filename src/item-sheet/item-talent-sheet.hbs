<form class="crypt-item-sheet__talent" autocomplete="off">
  <header>
    <div class="item-info-wrapper">
      <div class="avatar">
        <img
          class="profile-img"
          src="{{item.img}}"
          data-edit="img"
          title="{{item.name}}"
        />
      </div>
      <div class="item-info">
        <div class="item-info-inner">
          <div class="name">
            <label class="input-sizer stacked" data-value="{{item.name}}">
              <input
                type="text"
                oninput="this.parentNode.dataset.value = this.value"
                size="1"
                name="name"
                value="{{item.name}}"
              />
              <span class="label">Talent Name</span>
            </label>
          </div>
          <div class="cost">
            <label
              class="input-sizer stacked item-name"
              data-value="{{data.data.purchaseCost}}"
            >
              <input
                type="text"
                oninput="this.parentNode.dataset.value = this.value"
                size="1"
                name="data.purchaseCost"
                value="{{data.data.purchaseCost}}"
                data-dtype="Number"
              />
              <span class="label">UP Cost</span>
            </label>
          </div>
        </div>
        <div class="tiers">
          {{#if data.data.tiered}}
            <p>{{localize "CRYPTOMANCER.Talent.Tier"}}</p>
            {{#times data.data.tiers}}
              <span class="tier-toggle">{{> "systems/cryptomancer/shared/components/toggle-box/toggle-box.hbs" id=(concat "tier-toggle-" ../item.id "-" this) value=(lt this ../data.data.currentTier) placeholder=(add this 1) }}</span>
            {{/times}}
          {{/if}}
          <div class="flex-spacer"></div>
          <span class="tiered-toggle">
            {{localize "CRYPTOMANCER.Talent.Tiers"}} {{> "systems/cryptomancer/shared/components/toggle-box/toggle-box.hbs" id=(concat "tiered-toggle-" item.id) value=data.data.tiered name="data.tiered"}}
          </span>
          <input
            class="tier-count"
            type="text"
            name="data.tiers"
            value="{{data.data.tiers}}"
            data-dtype="Number"
          />
        </div>
      </div>
    </div>
  </header>
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
  </nav>
  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="description">
      {{editor
        content=data.data.description
        target="data.description"
        rollData=rollData
        button=true
        owner=owner
        editable=editable
      }}
    </div>
  </section>
</form>