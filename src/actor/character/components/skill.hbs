{{!
@Input skill: Skill & {attributeValue: number}
}}
<div class="crypt-skill">
  {{> toggleBox id=(concat "skill-" this.key "-break") name=(concat "data.skills." this.key ".break") value=this.break placeholder="1"}}
  {{> toggleBox id=(concat "skill-" this.key "-push") name=(concat "data.skills." this.key ".push") value=this.push placeholder="10"}}
  <a class="skill-name rollable"
     data-roll-core="{{this.core}}"
     data-roll-attribute="{{this.attribute}}"
     data-roll-skill="{{this.key}}">{{this.label}}</a>
  <span class="short-attr">({{shortAttr this.attribute}})</span>
  <span class="attr-value">{{this.attributeValue}}</span>
</div>
