<form class="crypt-actor-sheet character" autocomplete="off">
  <header>
    <div class="avatar">
      <img
        src="{{ actor.img }}"
        data-edit="img"
        title="{{ actor.name }}"
        height="180"
        width="180"
      />
    </div>
    <div class="bio">
      <div class="name">
        <label
          class="input-sizer stacked common-name"
          data-value="{{actor.name}}"
        >
          <input
            type="text"
            oninput="this.parentNode.dataset.value = this.value"
            size="1"
            name="name"
            value="{{actor.name}}"
          />
          <span class="label">Common Name</span>
        </label>
        <div class="flex-spacer"></div>
        <label
          class="input-sizer stacked true-name"
          data-value="{{data.data.biography.trueName}}"
        >
          <input
            type="text"
            oninput="this.parentNode.dataset.value = this.value"
            size="1"
            name="data.biography.trueName"
            placeholder="Barry"
            value="{{data.data.biography.trueName}}"
          />
          <span class="label">True Name</span>
        </label>
        <label
          class="input-sizer stacked race"
          data-value="{{data.data.biography.race}}"
        >
          <input
            type="text"
            oninput="this.parentNode.dataset.value = this.value"
            size="1"
            name="data.biography.race"
            placeholder="race"
            value="{{data.data.biography.race}}"
          />
          <span class="label">Race</span>
        </label>
        {{!--
        <div>
          <input
            type="text"
            class="common-name"
            placeholder="Common Name"
            name="name"
            value="{{actor.name}}"
          />
        </div>
        <span class="true-name">
          (<input
            type="text"
            placeholder="True Name"
            name="data.biography.trueName"
            value="{{data.data.biography.trueName}}"
          />)
        </span>
        <input
          type="text"
          class="pronouns"
          placeholder="Pronouns"
          name="data.biography.pronouns"
          value="{{data.data.biography.pronouns}}"
        />
        --}}
      </div>
      <div class="pronouns-party">
        <label
          class="input-sizer stacked pronouns"
          data-value="{{data.data.biography.pronouns}}"
        >
          <input
            type="text"
            oninput="this.parentNode.dataset.value = this.value"
            size="1"
            name="data.biography.pronouns"
            placeholder="he/him"
            value="{{data.data.biography.pronouns}}"
          />
          <span class="label">Pronouns</span>
        </label>
        <label
          class="input-sizer stacked party-name"
          data-value="{{data.data.biography.party}}"
        >
          <input
            type="text"
            oninput="this.parentNode.dataset.value = this.value"
            size="1"
            name="data.biography.party"
            placeholder="Party"
            value="{{data.data.biography.party}}"
          />
          <span class="label">Party Name</span>
        </label>
        <div class="flex-spacer"></div>
        <div class="upgrade-points">
          <span>UPs</span>
          <input
            class="upgrade-points"
            type="text"
            data-dtype="Number"
            name="data.upgradePoints.value"
            value="{{data.data.upgradePoints.value}}"
          />
        </div>
      </div>
      <div class="defenses">
        <div>
          <div class="defense">
            {{> "systems/cryptomancer/actor-sheet/components/defense.hbs"
            label="Dodge" value=data.data.core.speed.value desc="vs
            melee/missile" }}
          </div>
          <div class="defense">
            {{> "systems/cryptomancer/actor-sheet/components/defense.hbs"
            label="Parry" value=data.data.core.power.value desc="vs melee" }}
          </div>
        </div>
        <div>
          <div class="defense">
            {{> "systems/cryptomancer/actor-sheet/components/defense.hbs"
            label="Take Cover" value=data.data.core.wits.value desc="vs missile"
            }}
          </div>
          <div class="defense">
            {{> "systems/cryptomancer/actor-sheet/components/defense.hbs"
            label="Resist" value=data.data.core.resolve.value desc="vs magic" }}
          </div>
        </div>
        <div class="difficulty-selector">
          <span class="label">Check Difficulty</span>
          <span class="difficulty"
            >Trivial {{>
            "systems/cryptomancer/shared/components/toggle-box/toggle-box.hbs"
            id="difficulty-trivial" value=(is data.data.checkDifficulty 4)}}</span
          >
          <span class="difficulty"
            >Challenging {{>
            "systems/cryptomancer/shared/components/toggle-box/toggle-box.hbs"
            id="difficulty-challenging" value=(is data.data.checkDifficulty 6)}}</span
          >
          <span class="difficulty"
            >Tough {{>
            "systems/cryptomancer/shared/components/toggle-box/toggle-box.hbs"
            id="difficulty-tough" value=(is data.data.checkDifficulty 8)}}</span
          >
        </div>
      </div>
    </div>
  </header>
  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="core">{{localize "CRYPTOMANCER.Core.core"}}</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="features">{{localize "CRYPTOMANCER.Features"}}</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>
  <section class="sheet-body">
    <div class="tab core" data-group="primary" data-tab="core">
      <div class="sheet-cores">
        <div class="sheet-core">
          {{> "systems/cryptomancer/actor-sheet/components/core-triad.hbs"
          core=data.data.core.speed
          attrL=data.data.core.speed.attributes.agility
          attrR=data.data.core.speed.attributes.dexterity }}
          <div class="sheet-skills">
            {{> "systems/cryptomancer/actor-sheet/components/skill-list.hbs"
            attr=data.data.core.speed.attributes.agility }} {{>
            "systems/cryptomancer/actor-sheet/components/skill-list.hbs"
            attr=data.data.core.speed.attributes.dexterity }}
          </div>
        </div>
        <div class="sheet-core">
          {{> "systems/cryptomancer/actor-sheet/components/core-triad.hbs"
          core=data.data.core.power
          attrL=data.data.core.power.attributes.strength
          attrR=data.data.core.power.attributes.endurance }}
          <div class="sheet-skills">
            {{> "systems/cryptomancer/actor-sheet/components/skill-list.hbs"
            attr=data.data.core.power.attributes.strength }} {{>
            "systems/cryptomancer/actor-sheet/components/resource-skill.hbs"
            attr=data.data.core.power.attributes.endurance
            resource=data.data.healthPoints }}
          </div>
        </div>
        <div class="sheet-core">
          {{> "systems/cryptomancer/actor-sheet/components/core-triad.hbs"
          core=data.data.core.wits
          attrL=data.data.core.wits.attributes.knowledge
          attrR=data.data.core.wits.attributes.cunning }}
          <div class="sheet-skills">
            {{> "systems/cryptomancer/actor-sheet/components/skill-list.hbs"
            attr=data.data.core.wits.attributes.knowledge }} {{>
            "systems/cryptomancer/actor-sheet/components/skill-list.hbs"
            attr=data.data.core.wits.attributes.cunning }}
          </div>
        </div>
        <div class="sheet-core">
          {{> "systems/cryptomancer/actor-sheet/components/core-triad.hbs"
          core=data.data.core.resolve
          attrL=data.data.core.resolve.attributes.presence
          attrR=data.data.core.resolve.attributes.willpower }}
          <div class="sheet-skills">
            {{> "systems/cryptomancer/actor-sheet/components/skill-list.hbs"
            attr=data.data.core.resolve.attributes.presence }} {{>
            "systems/cryptomancer/actor-sheet/components/resource-skill.hbs"
            attr=data.data.core.power.attributes.presence
            resource=data.data.manaPoints }}
          </div>
        </div>
      </div>
    </div>
    <div class="tab features" data-group="primary" data-tab="features">
      {{> "systems/cryptomancer/actor-sheet/components/feature-list.hbs" talents=data.data.talents}}
    </div>
  </section>
</form>
